{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "removeComments": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": false,
        "incremental": true,
        "resolveJsonModule": false,
        "lib": [
            "esnext",
            "dom"
        ],
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",        
    ],
    "exclude": [
        "node_modules"
    ]
}
